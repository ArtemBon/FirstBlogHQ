<h4>Post details:</h4>

<br />	
<p>
	<%= @post.content %>
	<br />
	<br />
	Author <%= @post.author %>
	<div align="right" style="font-size: 75%; color: #999">Added at <%= @post.created_at %></div>
</p>

<h4>Comments:</h4>

<br />
<% @comments.each do |comment| %>
	<p>
		<%= comment.content %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999">Added at <%= comment.created_at %></span>
	</p>
	<hr />
<% end %>

<br />
<p>
	<form action="/details/<%= @post.id %>" method="POST">

		<div class="form-group">
			<textarea name="comment[content]" class="form-control" rows="6"></textarea>
	  	</div>
	  
		<button type="submit" class="btn btn-primary">Add comment</button>

	</form>
</p>